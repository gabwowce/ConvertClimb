{
    "expo": {
        "name": "Gradiator",
        "slug": "ConvertClimb",
        "version": "1.0.0",
        "orientation": "default",
        "userInterfaceStyle": "light",
        "newArchEnabled": true, 
        "splash": {
            "image": "./assets/icons/splash-icon-dark.png",
            "backgroundColor": "#ffffff",
            "resizeMode": "contain"
        },
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.gabwowce.gradiator",
            "infoPlist": {
                "ITSAppUsesNonExemptEncryption": false
            },
            "icon":{
                "light": "./assets/icons/ios-light.png"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/icons/adaptive-icon.png",
                "backgroundColor": "#1A18BA"
            },
            "edgeToEdgeEnabled": true,
            "softwareKeyboardLayoutMode": "pan",
            "package": "com.gabwowce.gradiator"
        },
        "web": {
            "favicon": "./assets/app-logo.png"
        },
        "plugins": [
            [
                "expo-font",
                {
                    "fonts": [
                        "./assets/fonts/coolvetica_rg.ttf"
                    ]
                }
            ]
        ],
        "owner": "gabwowce",
        "extra": {
            "eas": {
                "projectId": "ea70aeec-6e63-4cd7-819a-32fecaa444b4"
            }
        }
    }
}